//Transceiver E32 433T30D v6.2 and ARDUINO UNO
// Код на передачу сообщения!

#include <SoftwareSerial.h> 
#define M0 12 
#define M1 11 
#define SOFT_TX 10 
#define SOFT_RX 9 
#define AUX 8 

SoftwareSerial softSerial(SOFT_RX, SOFT_TX); // RX, TX 

void setup() {
  
pinMode(M0, OUTPUT); 
pinMode(M1, OUTPUT); 
pinMode(SOFT_RX, INPUT); 
pinMode(SOFT_TX, OUTPUT); 
pinMode(AUX, INPUT); 
//pinMode(MODE_SWITCH, INPUT); 

Serial.begin(9600); 
softSerial.begin(1200); 

//digitalWrite(M0, HIGH); // Если на М0 и на М1 подать высокий уровень то передатчик будет всегда включен!
digitalWrite(M0, LOW); // Если на М0 и на М1 подать низкий уровень то передатчик будет включатся только 
//digitalWrite(M1, HIGH); // на передачу сообщения.
digitalWrite(M1, LOW); //Можно по экспериментировать с этими уровнями.
} 

void loop() {

softSerial.println ("hello world"); //Отправка сообщения по радио 
Serial.println ("hello world"); // Отправка в монитор, для проверки. В дальнейшем можно убрать.
delay(2000); 

}
